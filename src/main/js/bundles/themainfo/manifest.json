            ],
            "propertiesConstructor": true,
            "properties": {
                "Event-Topics": [
                    {
                        "topic": "agiv/search/RESULT_RENDERED",
                        "method": "_handleResultSelection"
                    },
                    {
                        "topic": "agiv/search/result/CLEAR",
