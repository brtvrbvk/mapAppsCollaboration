                    {
                        "topic": "ct/contentmanager/CLEAR_ALL",
                        "method": "_clearRadius"
                    },
                    {
                        "topic": "ct/contentmanager/CLEAR_ALL",
                        "method": "_clearPosition"
                    }
                ],
                "symbolTable": {
                    "circle": {
                        "color": [
                            150,
                            150,
                            150,
                            0
                        ],
                        "type": "esriSFS",
                        "style": "esriSFSNull",
                        "outline": {
                            "color": [
                                162,
