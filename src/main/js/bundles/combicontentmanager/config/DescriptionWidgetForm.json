{
    "dataform-version": "1.0.0",
    "size": {
        "h": 200,
        "w": 500
    },
    "type": "gridpanel",
    "showLabels": true,
    "cols": 1,
    "children": [
        {
            "type": "checkbox",
            "title": "${menu.combicontentmanager.showDescription}",
            "field": "showDescription"
        },
        {
            "type": "textarea",
            "title": "${menu.combicontentmanager.content}",
            "field": "description",
            "size": {
                "w": 500,
                "h": 100
            },
            "wrap": "on"
        }
    ]
}