{
    "dataform-version": "1.0.0",
    "size": {
        "h": 200,
        "w": 500
    },
    "type": "gridpanel",
    "showLabels": true,
    "cols": 1,
    "children": [
        {
            "type": "checkbox",
            "title": "${menu.disclaimer.alwaysShowOnStartup}",
            "field": "alwaysShowOnStartup"
        },
        {
            "type": "textarea",
            "title": "${menu.disclaimer.text}",
            "field": "i18n.ui.disclaimer",
            "size": {
                "w": 500,
                "h": 100
            },
            "wrap": "on",
            "required": true
        }
    ]
}