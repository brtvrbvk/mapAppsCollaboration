{
    "Bundle-SymbolicName": "quory",
    "Bundle-Version": "1.0",
    "Bundle-Name": "QuoryBuilder",
    "Bundle-Description": "QuoryBuilder sample bundle",
    "Bundle-Vendor": "2foo Inc",
    "Bundle-Localization": [],
    "Config-Bundle-Location": "/config",
    "Require-Bundle":[{
            "name": "map"
    }],
    "layout-widgets": [
        {
            "role": "queryWidget",
            "window": {
                "title": "Interferences",
                "marginBox": {
                    "w": 330,
                    "h": 180,
                    "l": 0,
                    "b": 250
                },
                "dockTool": "queryTool",
                "closable": "false"
            }
        }
    ],
    "Components": [
        {
            "name": "QueryController",
            "properties":{
                "namePlaceHolder": "Enter name"
            },
            "references": [{
                    "name": "queryWidget",
                    "providing": "query.QueryWidget"
                },
                {
                    "name" : "_store",
                    "providing": "ct.api.Store",
                    "filter": "(url=http://services.conterra.de/arcgis/rest/services/training/stoerungen/MapServer/0)"
                },
                {
                    "name": "_mapState",
                    "providing": "ct.mapping.map.MapState"
                },
                {
                    "name": "_resultCenterDataModel",
                    "providing": "ct.resultcenter.DataModel"
                }
            ]
        },
        {
            "name": "QueryWidget",
            "provides": ["dijit.Widget", "query.QueryWidget"],
            "properties": {
                "widgetRole": "queryWidget"
            }
        },
        {
            "name": "QueryTool",
            "impl": "ct/tools/Tool",
            "provides": ["ct.tools.Tool"],
            "propertiesConstructor": true,
            "properties": {
                "id": "queryTool",
                "toolRole": "toolset",
                "title": "QueryTool",
                "tooltip": "Define query to filter features",
                "togglable": true,
                "iconClass": "icon-cog"
            }
        }
    ]
}