{
    "Bundle-SymbolicName": "sample_extentwriter",
    "Bundle-Version": "1.0",
    "Bundle-Name": "${bundleName}",
    "Bundle-Description": "${bundleDescription}",
    "Bundle-Vendor": "con terra GmbH",
    "Bundle-Category": ["sample"],
    "Bundle-Icon": {},
    "Bundle-License": {},
    "Require-Bundle": [{
            "name": "map"
        }],
    "Components": [{
            "name": "ExtentWriterFactory",
            "provides": ["dijit.Widget"],
            "instanceFactory": true,
            "properties": {
                "widgetRole": "extentWriter",
                "decimalPlaces": 3
            },
            "references": [{
                    "name": "_mapState",
                    "providing": "ct.mapping.map.MapState"
                }]
        }]
}