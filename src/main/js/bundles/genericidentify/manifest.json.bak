                    "providing": "resultcenter.DataView",
                    "cardinality": "0..1",
                    "connect": {
                        "onItemClicked": "handleOnItemClicked"
                    }
                },
                {
                    "name": "fiController",
                    "providing": "genericidentify.FeatureInfoController"
                }
            ]
        },
