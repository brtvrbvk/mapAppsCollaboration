{
    "Bundle-SymbolicName": "genericidentify",
    "Bundle-Version": "5.0.4",
    "Bundle-Name": "${bundleName}",
    "Bundle-Description": "${bundleDescription}",

    "Bundle-AutoStartPolicy": "yes",
    "Config-Bundle-Location": "/config",
    "Require-Bundle": [
        {
            "name": "map",
            "version": "[3.0,4.0)"
        },
        {
            "name": "contentviewer",
            "version": "[3.0,4.0)"
        },
        {
            "name": "infoviewer",
            "version": "[3.0,4.0)"
        },
        {
            "name": "splitviewmap",
            "version": "[4.0.0,)",
            "policy": "optional"
        }
    ],
    "Components": [
        {
